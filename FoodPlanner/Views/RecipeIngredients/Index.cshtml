@model IEnumerable<FoodPlanner.Models.RecipeIngredient>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Unit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingredient)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Unit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Recipe.RecipeID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ingredient.IngredientID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RecipeIngredientID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RecipeIngredientID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RecipeIngredientID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
